import java.util.*;
class product
{
String pcode;
String pname;
int price;
void getdata()
{
Scanner a = new Scanner(System.in);
Scanner b = new Scanner(System.in);
System.out.print("Enter the product code: ");
pcode = b.nextLine();
System.out.print("Enter the product name: ");
pname = b.nextLine();
System.out.print("Enter the product price: ");
price = a.nextInt();
}
void display()
{
System.out.println(pcode+" "+pname+" "+price);
}
}
public class prgm1
{
public static void main(String[] args)
{
product p1=new product();
p1.getdata();
product p2=new product();
p2.getdata();
product p3=new product();
p3.getdata();
p1.display();
p2.display();
p3.display();
if(p1.price<p2.price && p1.price<p2.price)
{
System.out.println("Product "+p1.pname+" is of lowest price");
}
else if(p2.price<p1.price && p2.price<p3.price)
{
System.out.println("Product "+p2.pname+" is of lowest price");
}
else
{
System.out.println("Product "+p3.pname+" is of lowest price");
}
}
}
